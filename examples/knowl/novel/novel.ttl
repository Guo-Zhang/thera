@prefix novel: <http://example.org/novel/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# ===== 实体 =====
novel:char_male a novel:人物 ;
    rdfs:label "他" ;
    novel:description """男主人公，从朋友圈关注女主，理解她的孤独与压力""" ;
    novel:性格 "细腻、体贴、有洞察力" ;
    novel:情感状态 "心疼、爱慕" ;
    novel:角色功能 "观察者/心疼者" .

novel:char_female a novel:人物 ;
    rdfs:label "她" ;
    novel:description """女主人公，习惯收集他人故事却无法填满内心""" ;
    novel:性格 "敏感、压抑、完美主义" ;
    novel:情感状态 "孤独、被理解后的触动" ;
    novel:角色功能 "被观察者/孤独者" .

novel:location_snowy a novel:地点 ;
    rdfs:label "雪中户外" ;
    novel:description """促成二人情感交流的场景""" ;
    novel:氛围 "安静、纯净、情感催化剂" .

novel:object_snowflake a novel:物件 ;
    rdfs:label "雪花" ;
    novel:description """触发情感暴露的媒介""" ;
    novel:象征 "纯净、易逝、情感媒介" .

novel:object_tissue a novel:物件 ;
    rdfs:label "纸巾" ;
    novel:description """身体接触的媒介，传递温度""" ;
    novel:功能 "关怀的具象化" .

novel:object_moments a novel:物件 ;
    rdfs:label "朋友圈照片" ;
    novel:description """男主初次看到女主的媒介""" ;
    novel:功能 "关系缘起" .

novel:metaphor_warehouse a novel:隐喻 ;
    rdfs:label "仓库" ;
    novel:description """女主内心世界的隐喻，收藏他人故事却无法填满""" ;
    novel:象征 "内心世界、孤独的空间化" .

novel:metaphor_bottles a novel:隐喻 ;
    rdfs:label "瓶瓶罐罐" ;
    novel:description """女主收集的他人故事，代表她对他人的关注和自我压抑""" ;
    novel:象征 "他人故事、社会期待、完美主义的负担" .

# ===== 关系 =====
novel:char_male novel:爱慕_心疼 novel:char_female ;
    novel:confidence 0.95 ;
    novel:context "他看到她的眼泪滑落，顿时慌了神" .

novel:char_male novel:理解_洞察 novel:char_female ;
    novel:confidence 0.9 ;
    novel:context "你这么会开导人，想来心里存了很多心事" .

novel:char_female novel:依赖_渴望 novel:char_male ;
    novel:confidence 0.85 ;
    novel:context "她想抓住他的手不让他离开自己" .

novel:char_female novel:压抑_防御 novel:char_female ;
    novel:confidence 0.8 ;
    novel:context "又被自己的想法羞到了" .

novel:object_snowflake novel:触发 novel:event_trigger ;
    novel:confidence 0.9 ;
    novel:context "雪天打开仓库" .

novel:object_tissue novel:传递 novel:emotion_care ;
    novel:confidence 0.95 ;
    novel:context "身体接触，情感突破" .

novel:object_moments novel:缘起 novel:relationship_begin ;
    novel:confidence 1.0 ;
    novel:context "第一次在朋友圈里看到你的照片" .

novel:char_female novel:收藏 novel:metaphor_bottles ;
    novel:confidence 0.85 ;
    novel:context "瓶瓶罐罐里收集了很多人的故事" .

novel:char_male novel:弥漫 novel:metaphor_warehouse ;
    novel:confidence 0.8 ;
    novel:context "好像弥漫在整个仓库里" .

# ===== 抽象实体 =====
novel:emotion_care a novel:Emotion ;
    rdfs:label "关怀" .

novel:relationship_begin a novel:RelationshipState ;
    rdfs:label "关系开端" .

# ===== 事件 =====
novel:event_trigger a novel:触发Event ;
    rdfs:label "赏雪接雪" ;
    novel:description "他兴高采烈地接雪，她看着心里泛酸" ;
    novel:emotion_change "压抑的忧伤" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_deepen a novel:深入Event ;
    rdfs:label "仓库隐喻对话" ;
    novel:description "她承认雪天打开了心里的仓库" ;
    novel:emotion_change "建立信任" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_expose a novel:暴露Event ;
    rdfs:label "点破她的心事" ;
    novel:description "他点破她会开导人的真相" ;
    novel:emotion_change "防线松动" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_key a novel:关键Event ;
    rdfs:label "他的故事弥漫仓库" ;
    novel:description "她感受到他的存在不是收藏，而是充满" ;
    novel:emotion_change "被真正看见" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_flashback a novel:回溯Event ;
    rdfs:label "回忆初见" ;
    novel:description "他从朋友圈看到她，想要联系方式却放弃" ;
    novel:emotion_change "揭示长久的心疼与关注" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_climax a novel:高潮Event ;
    rdfs:label "为她擦泪" ;
    novel:description "他鬼使神差地擦了她的眼泪" ;
    novel:emotion_change "身体接触，情感突破" ;
    novel:participant novel:char_male, novel:char_female .

novel:event_ambiguous a novel:暧昧Event ;
    rdfs:label "脸红与退缩" ;
    novel:description "她脸红想抓住他的手，他不敢再靠近" ;
    novel:emotion_change "双向情愫，但有距离" ;
    novel:participant novel:char_male, novel:char_female .

# ===== 事件时序链 =====
novel:event_trigger novel:next_event novel:event_deepen .

novel:event_deepen novel:next_event novel:event_expose .

novel:event_expose novel:next_event novel:event_key .

novel:event_key novel:next_event novel:event_flashback .

novel:event_flashback novel:next_event novel:event_climax .

novel:event_climax novel:next_event novel:event_ambiguous .

# ===== 情感状态链 =====
novel:emotion_lonely a novel:EmotionState ;
    rdfs:label "孤独压抑" ;
    novel:owner novel:char_female .

novel:emotion_touched a novel:EmotionState ;
    rdfs:label "被触动" ;
    novel:owner novel:char_female .

novel:emotion_trust a novel:EmotionState ;
    rdfs:label "信任暴露" ;
    novel:owner novel:char_female .

novel:emotion_desire a novel:EmotionState ;
    rdfs:label "渴望亲密" ;
    novel:owner novel:char_female .

novel:emotion_shy a novel:EmotionState ;
    rdfs:label "羞涩回避" ;
    novel:owner novel:char_female .
